<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/authorizationUseAniList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/lg_margin"
        app:icon="@drawable/ic_account_circle_24"
        style="@style/AppTheme.Material.UnElevatedButton"
        android:text="@string/auth_label_authorize" />

    <Space
        android:layout_width="wrap_content"
        android:layout_height="@dimen/md_margin" />

    <com.google.android.material.chip.Chip
        android:id="@+id/authorizationIssues"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/size_48dp"
        android:layout_marginEnd="@dimen/size_48dp"
        android:layout_gravity="center_horizontal"
        android:text="@string/auth_label_having_trouble_logging_in"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
        app:chipIcon="@drawable/ic_error_outline_24"/>

</androidx.appcompat.widget.LinearLayoutCompat>