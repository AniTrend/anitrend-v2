<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:alpha="@dimen/mtrl_low_ripple_pressed_alpha"
        android:color="?colorOnBackground"
        android:state_pressed="true"/>

    <item android:alpha="@dimen/mtrl_low_ripple_focused_alpha"
        android:color="?colorOnBackground"
        android:state_focused="true"
        android:state_hovered="true"/>

    <item android:alpha="@dimen/mtrl_low_ripple_focused_alpha"
        android:color="?colorOnBackground"
        android:state_focused="true"/>

    <item android:alpha="@dimen/mtrl_low_ripple_hovered_alpha"
        android:color="?colorOnBackground"
        android:state_hovered="true"/>

    <item android:alpha="@dimen/mtrl_low_ripple_default_alpha"
        android:color="?colorOnBackground"/>
</selector>