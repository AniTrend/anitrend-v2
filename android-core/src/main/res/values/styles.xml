<resources>

    <style name="AppTheme.FontFamily" parent="SupportTheme.FontFamily">
        <item name="android:fontFamily">@font/product_sans_regular</item>
    </style>

    <style name="AppTheme.ShapeAppearance.Small.Rounded" parent="ShapeAppearance.Material3.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/lg_margin</item>
    </style>

    <style name="AppTheme.ShapeAppearance.Medium.Rounded" parent="ShapeAppearance.Material3.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/xl_margin</item>
    </style>

    <style name="AppTheme.ShapeAppearance.Large.Rounded" parent="ShapeAppearance.Material3.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/xl_margin</item>
    </style>


    <style name="AppTheme.TextAppearance.Material.TabLayout" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.Material.TabLayout" parent="Widget.Material3.TabLayout">
        <item name="tabMode">auto</item>
        <item name="tabGravity">center</item>
        <item name="tabInlineLabel">true</item>
        <item name="tabIndicatorFullWidth">false</item>
        <item name="tabIndicatorColor">?colorOnSurface</item>
        <item name="tabIndicatorHeight">@dimen/size_4dp</item>
        <item name="tabTextColor">@color/material_tab_text_color</item>
        <item name="tabIndicator">@drawable/material_tab_indicator</item>
        <item name="tabMinWidth">@dimen/design_tab_layout_min_width</item>
        <item name="tabTextAppearance">@style/AppTheme.TextAppearance.Material.TabLayout</item>
    </style>

    <style name="AppTheme.Material.MaterialCard" parent="Widget.Material3.CardView.Filled">
        <item name="android:layout_margin">@dimen/lg_margin</item>
        <!--<item name="cardPreventCornerOverlap">false</item>
        <item name="cardBackgroundColor">?colorPrimary</item>
        <item name="cardElevation">@dimen/size_2dp</item>
        <item name="cardCornerRadius">@dimen/lg_margin</item>-->
    </style>

    <style name="AppTheme.Material.MediaCard" parent="Widget.Material3.CardView.Filled">
        <item name="android:layout_margin">@dimen/lg_margin</item>
        <!--<item name="android:foreground">?selectableItemBackground</item>
        <item name="cardPreventCornerOverlap">false</item>
        <item name="cardBackgroundColor">?colorPrimary</item>
        <item name="cardElevation">0dp</item>
        <item name="cardCornerRadius">@dimen/lg_margin</item>-->
    </style>

    <style name="AppTheme.Material.UnElevatedButton" parent="Widget.Material3.Button.UnelevatedButton">
        <item name="android:textAppearance">?textAppearanceSubtitle2</item>
        <item name="android:backgroundTint">?colorAccent</item>
        <item name="android:textColor">@color/white_1000</item>
        <item name="iconTint">@color/white_1000</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="AppTheme.Material.OutlinedButton" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:textAppearance">?textAppearanceSubtitle2</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="AppTheme.Material.TextButton" parent="Widget.Material3.Button.TextButton">
        <item name="android:textAppearance">?textAppearanceSubtitle2</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">?colorOnSurface</item>
        <item name="android:textAllCaps">false</item>
        <item name="rippleColor">@color/selector_text_button_ripple</item>
    </style>

    <style name="AppTheme.MediaImage">
        <item name="android:layout_width">@dimen/series_image_xl</item>
        <item name="android:layout_height">0dp</item>
    </style>

    <style name="AppTheme.MediaStatus">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/size_2dp</item>
    </style>

    <style name="AppTheme.SingleLineText" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="AppTheme.DoubleLineText" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">2</item>
    </style>

    <style name="AppTheme.Material.Chip.Action" parent="Widget.Material3.Chip.Filter">
        <item name="android:textAppearance">?textAppearanceSubtitle2</item>
        <item name="android:textColor">@color/white_1000</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="chipBackgroundColor">?colorAccent</item>
    </style>

    <style name="AppTheme.Material.Chip.Choice" parent="Widget.Material3.Chip.Suggestion">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?textAppearanceSubtitle2</item>
        <item name="android:textColor">@color/selector_chip_text_color</item>
        <item name="checkedIconEnabled">false</item>
        <item name="checkedIconVisible">false</item>
        <item name="chipBackgroundColor">@color/selector_chip_background</item>
        <item name="android:checkable">true</item>
    </style>

    <style name="AppTheme.Material.TextBody.Primary" parent="Widget.MaterialComponents.TextView">
        <item name="android:textAppearance">?textAppearanceBody1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="AppTheme.Material.TextBody.Secondary" parent="Widget.MaterialComponents.TextView">
        <item name="android:textAppearance">?textAppearanceBody2</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="AppTheme.Material.TextSubTitle.Primary" parent="Widget.MaterialComponents.TextView">
        <item name="android:textAppearance">?textAppearanceSubtitle1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="AppTheme.Material.TextSubTitle.Secondary" parent="Widget.MaterialComponents.TextView">
        <item name="android:textAppearance">?textAppearanceSubtitle2</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="AppTheme.Material.TextHeadLine.Primary" parent="Widget.MaterialComponents.TextView">
        <item name="android:textAppearance">?textAppearanceHeadline5</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="AppTheme.Material.TextHeadLine.Secondary" parent="Widget.MaterialComponents.TextView">
        <item name="android:textAppearance">?textAppearanceHeadline6</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="AppTheme.Material.TextInputLayout.Outlined" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">?colorAccent</item>
        <item name="hintTextColor">?colorOnSurface</item>
    </style>

    <style name="AppTheme.Material.TextInputLayout.Filled" parent="Widget.Material3.TextInputLayout.FilledBox">
        <item name="hintTextColor">?colorOnSurface</item>
    </style>

    <style name="AppTheme.Material.BottomAppBar" parent="Widget.Material3.BottomAppBar">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="navigationIconTint">@color/md_theme_onPrimary</item>
        <item name="android:layout_gravity">bottom</item>
    </style>

    <style name="AppTheme.Material.FloatingActionButton" parent="Widget.Material3.FloatingActionButton.Secondary">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <!--<item name="tint">@color/white_1000</item>
        <item name="backgroundTint">?colorAccent</item>-->
    </style>

    <style name="AppTheme.Material.ExtendedFloatingActionButton" parent="Widget.Material3.ExtendedFloatingActionButton.Secondary">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <!--<item name="tint">@color/white_1000</item>
        <item name="backgroundTint">?colorAccent</item>-->
    </style>

    <style name="AppTheme.Overlay.DatePicker" parent="@style/ThemeOverlay.Material3.MaterialCalendar">
        <item name="colorPrimary">@color/md_theme_primary</item>
        <item name="colorOnPrimary">@color/md_theme_onPrimary</item>

        <item name="buttonBarPositiveButtonStyle">@style/AppTheme.Material.TextButton</item>
        <item name="buttonBarNegativeButtonStyle">@style/AppTheme.Material.TextButton</item>
        <item name="buttonBarNeutralButtonStyle">@style/AppTheme.Material.TextButton</item>

        <item name="shapeAppearanceSmallComponent">@style/AppTheme.ShapeAppearance.Small.Rounded</item>
        <item name="shapeAppearanceMediumComponent">@style/AppTheme.ShapeAppearance.Medium.Rounded</item>
        <!-- Customize text field of the text input mode. -->
        <item name="textInputStyle">@style/AppTheme.Material.TextInputLayout.Outlined</item>
    </style>

    <style name="AppTheme.Material.PopupTheme" parent="SupportTheme.PopupTheme">
        <item name="android:popupBackground">@color/md_theme_primary</item>
    </style>

    <style name="AppTheme.AppCompat.Spinner" parent="Base.Widget.AppCompat.Spinner">
        <item name="popupTheme">@style/AppTheme.Material.PopupTheme</item>
    </style>

    <style name="AppTheme.RatingBar.Small" parent="Theme.Material3.DayNight">
        <item name="ratingBarStyle">@style/Widget.AppCompat.RatingBar.Small</item>
        <item name="colorControlNormal">@color/grey_50</item>
        <item name="colorControlActivated">@color/white_1000</item>
    </style>

</resources>
