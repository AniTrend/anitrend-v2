<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mediaCardContainer"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/lg_margin"
    style="@style/AppTheme.MediaCard">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <co.anitrend.arch.ui.view.image.SupportImageView
            android:id="@+id/mediaImage"
            android:layout_width="@dimen/series_image_lg"
            android:layout_height="0dp"
            android:scaleType="centerCrop"
            app:aspectRatio="1.6"
            tools:src="@sample/poster"
            tools:scaleType="centerCrop"/>

        <co.anitrend.common.media.ui.widgets.MediaStatusWidget
            android:id="@+id/mediaStatusWidget"
            android:layout_width="match_parent"
            android:layout_height="@dimen/sm_margin"
            android:layout_marginTop="@dimen/sm_margin" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/mediaTitle"
            android:padding="@dimen/md_margin"
            android:textAppearance="?attr/textAppearanceBody2"
            android:textStyle="bold"
            style="@style/AppTheme.SingleLineText"
            tools:text="@sample/series.json/title/userPreferred" />

        <co.anitrend.common.media.ui.widgets.MediaSubTitleWidget
            android:id="@+id/mediaSubTitleWidget"
            android:padding="@dimen/md_margin"
            style="@style/AppTheme.SingleLineText"
            android:textAppearance="?attr/textAppearanceCaption"
            tools:text="@sample/series.json/mediaAttributes" />

    </androidx.appcompat.widget.LinearLayoutCompat>

</com.google.android.material.card.MaterialCardView>