<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    tools:background="@drawable/bubble_background">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/mediaAverageScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:textStyle="bold"
        android:textSize="@dimen/media_rating_widget_text_size"
        android:textColor="@color/white_1000"
        tools:text="@sample/series.json/averageScore"
        />
    
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/mediaFavouriteIndicator"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="@dimen/lg_margin"
        android:layout_width="@dimen/media_rating_widget_icon_size"
        android:layout_height="@dimen/media_rating_widget_icon_size"
        tools:srcCompat="@drawable/ic_favourite" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/mediaListStatusIndicator"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="@dimen/lg_margin"
        android:layout_width="@dimen/media_rating_widget_icon_size"
        android:layout_height="@dimen/media_rating_widget_icon_size"
        tools:src="@drawable/ic_planning" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/mediaListNotesIndicator"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="@dimen/lg_margin"
        android:layout_width="@dimen/media_rating_widget_icon_size"
        android:layout_height="@dimen/media_rating_widget_icon_size"
        tools:srcCompat="@drawable/ic_note" />

</androidx.appcompat.widget.LinearLayoutCompat>