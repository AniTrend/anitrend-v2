<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sharedCardContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/lg_margin"
    style="@style/AppTheme.Material.MediaCard">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <co.anitrend.arch.ui.view.image.SupportImageView
            android:id="@+id/reviewMediaBanner"
            android:layout_width="match_parent"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?selectableItemBackground"
            android:layout_height="0dp"
            app:aspectRatio=".37"
            tools:scaleType="centerCrop"
            tools:src="@sample/banner" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="@dimen/size_4dp" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/size_8dp">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/reviewTextBody"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="6"
                tools:text="@sample/review.json/body"/>

            <Space
                android:layout_width="wrap_content"
                android:layout_height="@dimen/size_12dp" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/reviewReadMore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/action_read_more"
                    android:layout_gravity="end"
                    style="@style/AppTheme.Material.UnElevatedButton"
                    />

                <co.anitrend.common.review.ui.widget.ReviewRatingWidget
                    android:id="@+id/reviewRatingWidget"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start" />

            </FrameLayout>

        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.appcompat.widget.LinearLayoutCompat>

</com.google.android.material.card.MaterialCardView>